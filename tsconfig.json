{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ESNext",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "ESNext",
        "skipLibCheck": true,

        "composite": true,
        "allowSyntheticDefaultImports": true,

        /* Bundler mode */
        "moduleResolution": "node",
        "esModuleInterop": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },  
    "include": [
        "lib",
        "src",
        "test",
        "types",
        "node_modules/pbg-token-validators"
    ],  
    "exclude": ["node_modules", "dist"]
}

